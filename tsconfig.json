{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "module": "ES6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./build",
        "sourceMap": true,
        "strict": true,
		"target": "es5"
    },
    "exclude": [
        "bin",
        "node_modules",
        "**/*.test.*",
        "**/*..*",
    ],
    "include": [
        "src",
        "tools",
    ]
}
